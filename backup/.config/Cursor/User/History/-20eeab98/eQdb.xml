<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.PronunciationFragment">
    
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:title="Pronunciation Practice"
        android:translationZ="1dp"
        android:outlineProvider="none"
        android:clickable="true"
        android:focusable="true"
        app:titleTextColor="@color/black"
        app:navigationIcon="@drawable/ic_back" />
        
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Streak and daily goal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                
                <TextView
                    android:id="@+id/tvStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Streak: 0" />
                    
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                    
                <TextView
                    android:id="@+id/tvDailyGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="0/10 words today" />
            </LinearLayout>
            
            <ProgressBar
                android:id="@+id/pbDailyGoal"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvLessonTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:text="Basic Greetings"
                android:textColor="@color/primaryTextColor"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- CardView containing the word to pronounce -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvWord"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Say this word: "
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/primaryTextColor"
                        android:gravity="center" />
                        
                    <TextView
                        android:id="@+id/tvPhonetic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:gravity="center"
                        android:visibility="gone"
                        tools:text="/həˈloʊ/" />
                        
                    <TextView
                        android:id="@+id/tvPronunciationScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        tools:text="85%" />
                        
                    <View
                        android:id="@+id/pronunciationFeedbackView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:alpha="0"
                        android:background="@android:color/transparent" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView for feedback -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvPrompt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pronunciation feedback will appear here"
                        android:padding="12dp"
                        android:gravity="center"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
            <!-- Hint area -->
            <TextView
                android:id="@+id/tvHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hint_background"
                android:padding="12dp"
                android:layout_margin="8dp"
                android:visibility="gone"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:text="Pronunciation hint will appear here" />

            <!-- Speak button -->
            <Button
                android:id="@+id/btnSpeak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SPEAK NOW"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:textStyle="bold" />
                
            <!-- Listen button -->
            <Button
                android:id="@+id/btnListen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LISTEN TO PRONUNCIATION"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/ic_volume_up"
                android:drawablePadding="8dp"
                android:background="@drawable/rounded_button_blue"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:textStyle="bold" />
                
            <!-- Show hint button -->
            <Button
                android:id="@+id/btnShowHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SHOW HINT"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_button_yellow"
                android:textColor="@android:color/black"
                android:padding="12dp"
                android:textStyle="bold" />

            <!-- Next word button -->
            <Button
                android:id="@+id/btnRandomWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NEXT WORD"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_button_green"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:textStyle="bold" />

            <!-- Progress indicator -->
            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Words practiced: 0/0"
                android:textSize="16sp"
                android:gravity="center"
                android:padding="10dp" />
        </LinearLayout>
    </ScrollView>
    
    <!-- Lottie AnimationView as overlay -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieConfetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/confetti"
        android:visibility="gone" />
</FrameLayout> 